<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="jUnit" name="jUnit">
	<property name="src" value="src" />
	<property name="build" value="build/classes" />
	<property name="test.reports" value="reports" />

	<target name="compile" />

	<path id="cp">
		<pathelement location="WebContent/WEB-INF/lib/junit.jar" />
		<pathelement location="WebContent/WEB-INF/lib/chardet.jar" />
	</path>

	<target name="jUnit" depends="compile" description="JUnit-Tests durchfÃ¼hren">
		<echo message="start jUnitTests" />
		<delete dir="${test.reports}" />
		<mkdir dir="${test.reports}" />
		<junit printsummary="yes" fork="yes" haltonfailure="no">
			<classpath refid="cp"></classpath>
			<classpath path="${build}">
			</classpath>
			<formatter type="xml" />

			<batchtest todir="${test.reports}">
				<fileset dir="${src}">
					<include name="**/*Test.java" />
				</fileset>
			</batchtest>
		</junit>
		<echo message="Fertig, Testergebnisse im Verzeichnis ${test.reports}" />
	</target>
</project>
