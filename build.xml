<project name="plagiatsjaeger-app" default="build" basedir="..">

	<property name="webroot" value="../../../../../../srv/test" />
	<property name="source" value="/" />
	<target name="deploy">
		<echo message="Start deploy"/>
		<delete dir="${webroot}/*" />
		<copy todir="${webroot}">
			<fileset dir="${source}" />
		</copy>
		<echo message="Finish deploy"/>
	</target>
	<target name="build" >
		<antcall target="deploy"/>
	</target>
</project>