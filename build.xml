<project name="plagiatsjaeger-app" default="build" basedir="..">

	<!--<property name="webroot" value="../../../../../../../srv/test" />-->
	<property name="webroot" value="/srv/test" />
	<property name="source" value="/usr/share/tomcat6/.jenkins/jobs/PlagiatsJaegerPHPTest/workspace" />
	<target name="deploy">
		<echo message="Start deploy"/>
		<!--<delete dir="${webroot}/*" />-->
		<copydir src="${source}" dest="${webroot}"/>
		<echo message="Finish deploy"/>
	</target>
	<target name="build" >
		<antcall target="deploy"/>
	</target>
</project>