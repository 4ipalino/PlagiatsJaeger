<?xml version="1.0" encoding="UTF-8"?>
<?eclipse.ant.import?>
<project basedir="." default="jUnit" name="jUnit">
	<property name="src" value="src" />
	<property name="build" value="build/classes" />
	<property name="test.reports" value="reports" />



	<target name="init">
	    <echo memessage="Testinit"></echo>
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init">
	    <echo memessage="Testcompile"></echo>
		<javac srcdir="${src}" destdir="${build}" />
	</target>

	<target name="test" depends="compile" description="JUnit-Tests durchfÃ¼hren">
		<echo message="start jUnitTests" />
		<delete dir="${test.reports}" />
		<mkdir dir="${test.reports}" />
		<junit printsummary="yes" fork="yes" haltonfailure="no">
			<classpath location="${build}" />
			<formatter type="xml" />

			<batchtest todir="${test.reports}">
				<fileset dir="${src}">
					<include name="**/*Test.java" />
				</fileset>
			</batchtest>
		</junit>
		<echo message="Fertig, Testergebnisse im Verzeichnis ${test.reports}" />
	</target>
</project>
